{
  "name": "Foxhole: Block Websites",
  "short_name": "Foxhole",
  "version": "2.0",
  "manifest_version": 2,
  "description": "Foxhole blocks websites to prevent you from being distracted.",
  "background": {
	"scripts": ["background.js"]
  },

  "icons": {
    "128" : "./images/icon.png"
  },
  "browser_action": {
    "default_icon": "./images/icon.png",
    "default_title": "Foxhole",
    "default_popup": "popup.html"
  },
  "permissions": [
	"webRequest",
	"webRequestBlocking",
    "storage",
    "*://*/*",
    "tabs"
  ]
}
